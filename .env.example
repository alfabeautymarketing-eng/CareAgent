# AgentCare Environment Variables
# Copy this file to .env and fill in your values

# ============== App Settings ==============
APP_NAME=AgentCare
DEBUG=false
LOG_LEVEL=INFO

# ============== Server ==============
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4

# ============== Google Credentials ==============
# Option 1: Path to credentials file
GOOGLE_CREDENTIALS_FILE=config/credentials.json

# Option 2: Base64 encoded credentials (for Docker)
# GOOGLE_CREDENTIALS_BASE64=eyJ0eXBlIjoi...

# ============== Gemini AI ==============
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# ============== Redis ==============
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ============== Webhook Security ==============
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
WEBHOOK_SECRET=your-webhook-secret-here

# ============== Notifications (optional) ==============
# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============== Sentry (optional) ==============
# SENTRY_DSN=
